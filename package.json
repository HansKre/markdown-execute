{
  "name": "markdown-execute",
  "displayName": "Markdown Execute",
  "description": "Execute commands directly from Markdown",
  "version": "1.2.0",
  "publisher": "hanskre",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/hanskre/markdown-execute.git"
  },
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown",
    "onCommand:markdown-execute.executeSelection"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "markdown-execute.executeSelection",
        "title": "Markdown Execute: Execute Selection"
      }
    ],
    "keybindings": [
      {
        "command": "markdown-execute.executeSelection",
        "key": "ctrl+f1",
        "mac": "cmd+f1",
        "when": "editorTextFocus && editorLangId == markdown"
      }
    ],
    "configuration": {
      "title": "Markdown Execute",
      "properties": {
        "markdown-execute.executeInSsh": {
          "name": "Execute commands in SSH session",
          "type": "boolean",
          "default": true,
          "description": "Allow active terminal running a SSH session as target for commands"
        },
        "markdown-execute.confirmation": {
          "name": "Confirmation",
          "type": "string",
          "default": "pick",
          "enum": [
            "none",
            "pick",
            "message",
            "modal"
          ],
          "enumDescriptions": [
            "none: no confirmation before executing code block.",
            "pick: asks for confirmatioin using the QuickPick.",
            "message: asks for confirmation using notification.",
            "modal: asks for confirmation using a modal dialog."
          ],
          "description": "Choose how confirmation is presented before executing code block."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts",
    "pretest": "npm run compile",
    "test": "node ./dist/test/runTest.js",
    "test:unit": "npm run compile && mocha --require ts-node/register 'src/test/suite/**/*.test.ts'"
  },
  "devDependencies": {
    "@types/chai": "^5.2.2",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.3.0",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.92.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vscode/test-electron": "^2.5.2",
    "chai": "^6.2.0",
    "eslint": "^9.34.0",
    "glob": "^11.0.3",
    "mocha": "^11.7.4",
    "sinon": "^21.0.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "ts-type-safe": "^1.5.0"
  }
}
