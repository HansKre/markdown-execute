{
  "name": "markdown-execute",
  "displayName": "Markdown Execute",
  "description": "Execute commands directly from Markdown",
  "version": "1.1.0",
  "publisher": "hanskre",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/hanskre/markdown-execute.git"
  },
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown",
    "onCommand:markdown-execute.executeSelection"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "markdown-execute.executeSelection",
        "title": "Markdown Execute: Execute Selection"
      }
    ],
    "keybindings": [
      {
        "command": "markdown-execute.executeSelection",
        "key": "ctrl+f1",
        "mac": "cmd+f1",
        "when": "editorTextFocus && editorLangId == markdown"
      }
    ],
    "configuration": {
      "title": "Markdown Execute",
      "properties": {
        "markdown-execute.executeInSsh": {
          "name": "Execute commands in SSH session",
          "type": "boolean",
          "default": true,
          "description": "Allow active terminal running a SSH session as target for commands"
        },
        "markdown-execute.confirmation": {
          "name": "Confirmation",
          "type": "string",
          "default": "pick",
          "enum": ["none", "pick", "message", "modal"],
          "enumDescriptions": [
            "None: no confirmation before executing code block.",
            "Pick: showQuickPick with options.",
            "Message: showInformationMessage with buttons",
            "Modal: modal showInformationMessage with buttons."
          ],
          "description": "Choose how confirmation is presented before executing code block."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/vscode": "^1.92.0",
    "@typescript-eslint/eslint-plugin": "^8.0.1",
    "@typescript-eslint/parser": "^8.0.1",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.9.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.5.4",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "ts-type-safe": "^1.0.13"
  }
}
